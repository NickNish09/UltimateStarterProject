
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :city %>
    <%= f.input :location %>
    <%= f.input :uf %>
    <%= f.input :street %>
    <%= f.input :number %>
    <%= f.input :complement %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
